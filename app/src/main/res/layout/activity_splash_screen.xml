<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00727a"
    tools:context=".Splash_screen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:contentDescription="Welcome to productivity zone"
        android:src="@drawable/ic_launcher_background">

    </ImageView>


    <com.agrawalsuneet.dotsloader.loaders.AllianceLoader
        android:layout_width="29dp"
        android:layout_height="12dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:alliance_animDuration="500"
        app:alliance_distanceMultiplier="4"
        app:alliance_dotsRadius="5dp"
        app:alliance_drawOnlyStroke="true"
        app:alliance_firstDotsColor="#E91E63"
        app:alliance_secondDotsColor="#FFEB3B"
        app:alliance_strokeWidth="8dp"
        app:alliance_thirdDotsColor="#2196F3" />


</RelativeLayout>